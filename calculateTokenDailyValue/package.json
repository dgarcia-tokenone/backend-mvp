{
  "name": "calculatetokendailyvalue",
  "version": "1.0.0",
  "description": "Calculates and updates the daily value of a token.",
  "main": "index.js",
  "scripts": {
    "start": "functions-framework --target=calculateTokenDailyValue",
    "deploy": "gcloud functions deploy calculateTokenDailyValue --gen2 --runtime=nodejs20 --region=southamerica-east1 --source=./ --entry-point=calculateTokenDailyValue --trigger-http --allow-unauthenticated"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.0.0",
    "firebase-admin": "^11.0.0"
  }
}